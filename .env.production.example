# ====================================================================================
# VARIABLES DE ENTORNO PARA PRODUCCIÓN (RENDER/RAILWAY/HEROKU)
# ====================================================================================
# IMPORTANTE: No subas este archivo con valores reales a GitHub
# Usa este archivo como referencia para configurar las variables en tu plataforma cloud
# ====================================================================================

# ====================================================================================
# DATABASE CONFIGURATION (PostgreSQL - OBLIGATORIO)
# ====================================================================================
# Obtén estos valores del dashboard de tu base de datos en Render
DATABASE_URL=jdbc:postgresql://tu-host.oregon-postgres.render.com:5432/tu_database
DB_USER=tu_usuario
DB_PASSWORD=tu_password_seguro

# Pool de conexiones (ajusta según tu plan)
DB_POOL_SIZE=10
DB_POOL_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# ====================================================================================
# JPA CONFIGURATION
# ====================================================================================
# IMPORTANTE: Usa 'update' en producción, NUNCA 'create-drop'
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false

# ====================================================================================
# JWT CONFIGURATION (OBLIGATORIO)
# ====================================================================================
# IMPORTANTE: Genera un secreto único para producción (diferente al de desarrollo)
# Debe tener al menos 256 bits (32 caracteres)
JWT_SECRET=TuSecretoSuperSeguroYUnicoParaProduccion256BitsMinimo123456
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ====================================================================================
# AUTHENTICATION (OBLIGATORIO)
# ====================================================================================
# Si es 'true', debes configurar el servidor de correo (MAIL_*)
# Si es 'false', los usuarios pueden registrarse sin verificar email
APP_AUTH_REQUIRE_EMAIL_VERIFICATION=false

# ====================================================================================
# FRONTEND URL (OBLIGATORIO)
# ====================================================================================
# URL de tu frontend en Vercel, Netlify, etc.
FRONTEND_URL=https://road-warnings-narino-frontend.vercel.app

# ====================================================================================
# EMAIL CONFIGURATION (OPCIONAL - Solo si APP_AUTH_REQUIRE_EMAIL_VERIFICATION=true)
# ====================================================================================
# Para Gmail, necesitas generar una "App Password" en tu cuenta de Google
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-app-password-de-16-caracteres

# ====================================================================================
# REDIS CONFIGURATION (OPCIONAL)
# ====================================================================================
# Si no tienes Redis, la app usará caché en memoria
REDIS_HOST=tu-redis-host.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=tu-redis-password
REDIS_TIMEOUT=2000
CACHE_TTL=600000

# ====================================================================================
# LOGGING
# ====================================================================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=INFO
LOG_LEVEL_WEB=WARN
LOG_LEVEL_HIBERNATE=WARN

# ====================================================================================
# SWAGGER/API DOCS
# ====================================================================================
SWAGGER_ENABLED=true

# ====================================================================================
# FILE UPLOAD
# ====================================================================================
MAX_FILE_SIZE=5MB
MAX_REQUEST_SIZE=10MB

# ====================================================================================
# SERVER PORT
# ====================================================================================
# Render asigna automáticamente el puerto, pero puedes especificar un default
PORT=8080

# ====================================================================================
# EXTERNAL APIS (OPCIONAL)
# ====================================================================================
# OpenWeatherMap API (para clima)
WEATHER_API_KEY=tu-api-key-de-openweathermap

# ====================================================================================
# NOTAS IMPORTANTES
# ====================================================================================
#
# 1. VARIABLES OBLIGATORIAS (sin estas el servidor no arranca):
#    - DATABASE_URL
#    - DB_USER
#    - DB_PASSWORD
#    - JWT_SECRET
#    - APP_AUTH_REQUIRE_EMAIL_VERIFICATION
#    - FRONTEND_URL
#
# 2. Si APP_AUTH_REQUIRE_EMAIL_VERIFICATION=true, también son obligatorias:
#    - MAIL_USERNAME
#    - MAIL_PASSWORD
#
# 3. En Render, configura estas variables en:
#    Dashboard → Tu servicio → Environment
#
# 4. NUNCA subas este archivo con valores reales a GitHub
#
# 5. JWT_SECRET debe ser diferente en desarrollo y producción
#
# ====================================================================================
